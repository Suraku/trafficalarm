<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.percent.PercentRelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View style="@style/dividerLine"
            android:id="@+id/adapterTimeRequest_dividerLine"
            android:background="#d3d3d3"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/adapterTimeRequest_firstItem"
            android:textSize="@dimen/font_size_listSmall"
            android:textAlignment="center"
            android:layout_width="0px"
            app:layout_widthPercent="50%"
            android:layout_height="match_parent"
            android:layout_below="@id/adapterTimeRequest_dividerLine"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"/>

        <TextView
            android:id="@+id/adapterTimeRequest_secondItem"
            android:textSize="@dimen/font_size_listSmall"
            android:textAlignment="center"
            android:layout_width="0px"
            app:layout_widthPercent="50%"
            android:layout_height="match_parent"
            android:layout_below="@id/adapterTimeRequest_dividerLine"
            android:layout_toEndOf="@id/adapterTimeRequest_firstItem"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin" />

    </android.support.percent.PercentRelativeLayout>

</layout>